// tsconfig.json (for Rollup JS build)
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": false, // disable JS build type emission here
    "baseUrl": "./src",
    "paths": { "@/*": ["*"] }
  },
  "include": ["src"]
}
